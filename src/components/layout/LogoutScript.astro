<script>
    import { actions } from "astro:actions";
    import { navigate } from "astro:transitions/client";

    // Handle logout form submission
    document
        .getElementById("logoutForm")
        ?.addEventListener("submit", async (e) => {
            e.preventDefault();

            try {
                // Get the form element and CSRF token
                const form = e.target as HTMLFormElement;
                const formData = new FormData(form);

                // Call logout action with CSRF token included in the form data
                const { data, error } = await actions.logout(formData);

                if (error) {
                    console.error("Logout error:", error);
                    alert("Logout failed: " + error.message);
                    return;
                }

                if (data?.ok) {
                    // Clear all localStorage and sessionStorage on successful logout
                    /* try {
                        localStorage.clear();
                        sessionStorage.clear();
                    } catch (storageErr) {
                        // don't block logout/navigation if storage operations fail
                        console.warn(
                            "Could not clear storage during logout:",
                            storageErr,
                        );
                    } */

                    // Navigate to login page after successful logout
                    navigate("/login");
                }
            } catch (error) {
                console.error("Logout error:", error);
                alert("Logout failed");
            }
        });
</script>
