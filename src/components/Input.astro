---
interface Props {
    id: string;
    name: string;
    formName: string;
    required?: boolean;
    placeholder?: string;
}

const { id, name, formName, required, placeholder } = Astro.props;
---

<label for={id} class="block text-sm font-medium text-gray-200 mb-2">
    {name}
    {required ? "*" : ""}
</label>
<input
    type="text"
    id={id}
    name={formName}
    required={required}
    class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-transparent"
    placeholder={placeholder}
/>
