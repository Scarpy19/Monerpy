---
interface Props {
    title: string;
    listItems?: string[];
    classes?: string;
}

const { title, listItems = [], classes = "" } = Astro.props;
---

<div
    class=`mt-8 p-4 bg-yellow-900/50 border border-yellow-700 rounded-lg flex items-start gap-x-3 ${classes}`
>
    <div class="text-yellow-400 text-xl">⚠️</div>
    <div>
        <h3 class="text-yellow-400 font-semibold mb-2">
            {title}
        </h3>
        {
            listItems.length > 0 && (
                <ul class="text-yellow-200 text-sm flex flex-col gap-y-1">
                    {listItems.map((item, index) => (
                        <li id={index.toString()}>• {item}</li>
                    ))}
                </ul>
            )
        }
    </div>
</div>
