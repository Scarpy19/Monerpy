---
import { transactionTypes } from "@arrays.d.ts";
import Asterisk from "@comps/Asterisk.astro";

interface Props {
    id?: string;
    classes?: string;
}

const { classes, id } = Astro.props;
---

<div class={classes}>
    <span class="block text-sm font-medium text-gray-200 mb-2 cursor-default">
        Type <Asterisk id={`${id}type`} /></span
    >
    <div class="w-full h-[42px] flex items-center justify-center gap-x-4">
        {
            transactionTypes.map((type) => (
                <label
                    for={`${id}${type}Type`}
                    class="inline-flex items-center"
                >
                    <input
                        id={`${id}${type}Type`}
                        type="radio"
                        name="type"
                        value={type}
                        class={
                            `form-radio peer ` +
                            (type === "Income"
                                ? "accent-green-500"
                                : "accent-red-500")
                        }
                        required
                    />
                    <span
                        class={
                            `ml-2 ` +
                            (type === "Income"
                                ? "peer-checked:text-green-500"
                                : "peer-checked:text-red-500")
                        }
                    >
                        {type}
                    </span>
                </label>
            ))
        }
    </div>
</div>
